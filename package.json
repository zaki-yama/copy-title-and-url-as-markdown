{
  "name": "copy-title-and-url-as-markdown",
  "version": "2.0.2",
  "description": "Quickly copy the title & url of current tab as Markdown style (`[title](url)`)",
  "private": true,
  "packageManager": "pnpm@10.30.3",
  "scripts": {
    "dev": "wxt",
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "preview": "wxt",
    "test": "vitest",
    "postinstall": "wxt prepare && cp -r node_modules/@salesforce-ux/design-system/assets public",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "lint": "eslint --ext .ts,.tsx entrypoints/**",
    "release": "npm run lint && npm run build && standard-version",
    "release:dry-run": "standard-version --dry-run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zaki-yama/copy-title-and-url-as-markdown.git"
  },
  "keywords": [],
  "author": "Shingo Yamazaki <shingoyamazaki00@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zaki-yama/copy-title-and-url-as-markdown/issues"
  },
  "homepage": "https://github.com/zaki-yama/copy-title-and-url-as-markdown#readme",
  "dependencies": {
    "@salesforce-ux/design-system": "2.18.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-lightning-design-system": "5.9.1"
  },
  "devDependencies": {
    "@cybozu/eslint-config": "17.0.3",
    "@storybook/addon-essentials": "6.5.16",
    "@storybook/builder-vite": "0.1.41",
    "@storybook/react": "6.5.16",
    "@storybook/testing-library": "0.0.13",
    "@types/chrome": "0.0.332",
    "@types/react": "18.3.26",
    "@types/react-dom": "18.3.7",
    "@wxt-dev/module-react": "^1.1.3",
    "eslint": "8.35.0",
    "standard-version": "9.5.0",
    "typescript": "5.9.3",
    "vite": "^5.0.0",
    "vitest": "4.0.18",
    "wxt": "^0.20.18"
  }
}
